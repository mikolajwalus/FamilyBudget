@page "/Budgets"

<PageTitle>Budgets</PageTitle>

<h3>Budgets</h3>

@if(UserBudgets is null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Balance</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var budget in UserBudgets)
            {
                <tr>
                    <td>@budget.Name</td>
                    <td class="@((budget.Balance > 0 ? "text-success" : budget.Balance < 0 ? "text-danger" : "text-secondary"))">@budget.Balance</td>
                    <td>
                        @*<button class="btn btn-primary" @onclick="(() => ShowHero(hero.Id))"><i class="oi oi-pencil"></i></button>*@
                        <button class="btn btn-primary"><i class="oi oi-pencil"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<button class="btn btn-primary">Add budget</button>
